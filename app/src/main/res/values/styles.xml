<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"><!--액션바 없애기-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowContentOverlay">@null</item><!--툴바 밑에 그림자 제거-->
    </style>

    <style name="ToolbarDarkVer" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">#3282f1</item>
        <item name="android:textColorTertiary">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!--overflow 메뉴가 나올때 팝업메뉴의 테마-->
    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">#000</item>

    </style>

</resources>
