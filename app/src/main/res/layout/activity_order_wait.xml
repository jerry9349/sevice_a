<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#999999"
    tools:context=".OrderWaitActivity">

 <LinearLayout
     android:orientation="vertical"
     android:layout_margin="10dp"
     android:background="#AAFFFFFF"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

     <LinearLayout
         android:weightSum="100"
         android:layout_margin="15dp"
         android:background="@drawable/layoutboarder"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <LinearLayout
             android:background="#3282f1"
             android:layout_weight="3"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <ImageView
                     android:layout_centerInParent="true"
                     android:layout_alignParentLeft="true"
                     android:id="@+id/imageView1"
                     android:layout_marginLeft="5dp"
                     android:layout_marginRight="5dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     app:srcCompat="@drawable/ic_costom" />

                 <TextView
                     android:layout_centerInParent="true"
                     android:layout_toRightOf="@+id/imageView1"
                     android:id="@+id/textView1"
                     android:textStyle="bold"
                     android:textColor="#FFFFFF"
                     android:textSize="18sp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="주문 대기" />

                 <TextView
                     android:id="@+id/textView2"
                     android:gravity="center"
                     android:layout_marginRight="10dp"
                     android:layout_centerInParent="true"
                     android:layout_alignParentRight="true"
                     android:textStyle="bold"
                     android:textColor="@color/colorSevice"
                     android:textSize="18sp"
                     android:background="@drawable/textview_round"
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:text="3" />
             </RelativeLayout>

         </LinearLayout>
         <LinearLayout
             android:layout_weight="97"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <!--목록이 길어질시 스크롤로 내릴수 있음-->

             <ScrollView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <LinearLayout
                     android:background="@drawable/layoutboarder"
                     android:weightSum="100"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">

                     <LinearLayout

                         android:layout_weight="70"
                         android:gravity="center"
                         android:orientation="vertical"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

                         <ImageView
                             android:layout_marginTop="5dp"
                             android:layout_marginBottom="5dp"
                             android:id="@+id/imageView3"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:src="@drawable/ic_profile_circle" />

                         <LinearLayout
                             android:gravity="center"
                             android:layout_marginBottom="5dp"
                             android:orientation="horizontal"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content">
                             <TextView
                                 android:id="@+id/textView3"
                                 android:textStyle="bold"
                                 android:textSize="18sp"
                                 android:textColor="@color/colorSevice"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="김유준" />
                             <TextView
                                 android:id="@+id/textView4"
                                 android:textStyle="bold"
                                 android:textSize="18sp"
                                 android:layout_marginLeft="3dp"
                                 android:textColor="@color/colorSevice"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="님" />
                         </LinearLayout>


                     </LinearLayout>
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">

                         <ImageView
                             android:id="@+id/imageView4"
                             android:layout_alignParentRight="true"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:src="@drawable/ic_chevron_right_black_24dp2" />

                         <LinearLayout
                         android:layout_marginLeft="10dp"
                         android:gravity="center"
                         android:layout_weight="30"
                         android:orientation="vertical"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">
                         <!--주문갯수-->
                         <LinearLayout
                             android:weightSum="100"
                             android:orientation="horizontal"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content">
                             <LinearLayout
                                 android:layout_weight="75"
                                 android:orientation="vertical"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content">

                                 <TextView
                                     android:id="@+id/textView5"
                                     android:textSize="16sp"
                                     android:textColor="@color/colorSevice"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:text="주문 갯수" />
                             </LinearLayout>
                             <LinearLayout
                                 android:layout_weight="25"
                                 android:orientation="horizontal"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content">
                                 <TextView
                                     android:id="@+id/textView6"
                                     android:textSize="16sp"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="3" />
                                 <TextView
                                     android:id="@+id/textView7"
                                     android:layout_marginLeft="5dp"
                                     android:textSize="16sp"
                                     android:textColor="@color/colorSevice"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="건" />
                             </LinearLayout>
                         </LinearLayout>
                         <!--주문 목록-->
                         <LinearLayout
                             android:weightSum="100"
                             android:orientation="vertical"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content">
                             <LinearLayout
                                 android:layout_weight="65"
                                 android:orientation="vertical"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content">

                                 <TextView
                                     android:id="@+id/textView13"
                                     android:textSize="16sp"
                                     android:textColor="@color/colorSevice"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="주문 품목" />
                             </LinearLayout>
                             <LinearLayout
                                 android:layout_weight="35"
                                 android:orientation="vertical"
                                 android:layout_marginLeft="5dp"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content">
                                 <TextView
                                     android:id="@+id/textView14"
                                     android:textSize="16sp"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:text="티셔츠, 와이셔츠, 이불" />

                             </LinearLayout>
                         </LinearLayout>

                     </LinearLayout>

                     </RelativeLayout>
                 </LinearLayout>
             </ScrollView>
         </LinearLayout>
     </LinearLayout>

 </LinearLayout>


</LinearLayout>